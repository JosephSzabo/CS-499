<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JosephSzaboApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary background color. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Primary text color. -->
        <item name="android:textColor">@color/dark_gray</item>

        <!-- Toolbar color -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/light_blue</item>

        <!-- Button styles -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>

    </style>

    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Custom color definitions -->

    <color name="light_blue">#ADD8E6</color>
    <color name="dark_blue">#1E3A5F</color>
    <color name="dark_gray">#333333</color>
    <color name="light_green">#32CD32</color>
    <color name="red">#FF6347</color>
    <color name="yellow">#FFD700</color>
    <color name="light_gray">#F0F0F0</color>
</resources>